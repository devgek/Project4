<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_widget_background_color"
    android:padding="10dp" >

    <TableRow
        android:id="@+id/summaryTableRowToday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center" 
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/summary_title_today"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="HEUTE"
            android:textColor="@android:color/tertiary_text_light"
            android:textSize="@dimen/text_normal" >
        </TextView>

        <com.gek.and.geklib.view.ColorBarView
            android:id="@+id/colorBarToday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6" />

        <TextView
            android:id="@+id/summary_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:textColor="@color/app_text_important_color"
            android:textSize="@dimen/text_normal" 
            android:gravity="right">
        </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/summaryTableRowWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center" 
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/summary_title_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="WOCHE"
            android:textColor="@android:color/tertiary_text_light"
            android:textSize="@dimen/text_normal" >
        </TextView>

        <com.gek.and.geklib.view.ColorBarView
            android:id="@+id/colorBarWeek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6" />

        <TextView
            android:id="@+id/summary_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:textColor="@color/app_text_important_color"
            android:textSize="@dimen/text_normal" 
            android:gravity="right">
        </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/summaryTableRowMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center" 
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/summary_title_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="MONAT"
            android:textColor="@android:color/tertiary_text_light"
            android:textSize="@dimen/text_normal" >
        </TextView>

        <com.gek.and.geklib.view.ColorBarView
            android:id="@+id/colorBarMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6" />

        <TextView
            android:id="@+id/summary_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:textColor="@color/app_text_important_color"
            android:textSize="@dimen/text_normal" 
            android:gravity="right">
        </TextView>
    </TableRow>

</TableLayout>