<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
       xmlns:card_view="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/card_view_project"
       android:layout_gravity="center"
       android:layout_width="match_parent"
       android:layout_height="150dp" 
       card_view:cardCornerRadius="4dp" 
       >
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <TextView
           android:id="@+id/project_card_line1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" 
           />
       <TextView
           android:id="@+id/project_card_line2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" 
           />
    </LinearLayout>
    
 </android.support.v7.widget.CardView>
