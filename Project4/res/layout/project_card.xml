<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_project"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="0dp" 
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        >

        <ImageView
            android:id="@+id/project_card_color_bar"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:background="@drawable/project_card_color_bar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:paddingLeft="10dp" 
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/project_card_line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/primary_text_light" />

            <TextView
                android:id="@+id/project_card_line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/secondary_text_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/button_edit_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_gravity="right"
                android:contentDescription="@string/action_edit_project"
                android:src="@drawable/ic_action_overflow" 
                android:background="?android:attr/selectableItemBackground" 
                style="?android:attr/borderlessButtonStyle"/>

            <TextView
                android:id="@+id/project_card_running_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_text_important_color"
                android:textSize="@dimen/text_normal" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>