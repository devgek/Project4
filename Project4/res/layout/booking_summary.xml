<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_widget_background_color"
    android:padding="15dp" >

    <TextView
        android:id="@+id/booking_summary_title"
        style="@style/booking_row_text_important"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/booking_summary_hm"
        style="@style/booking_row_text_important"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/app_text_important_color" />

</RelativeLayout>